<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }

        h1 {
            color: #007bff;
        }

        form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff;
            color: #ffffff;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="container mt-5">
    <div class="text-center">
        <h1>URL Shortener</h1>
    </div>

    <div class="mt-3">
        <form action="/shortUrls" class="d-flex">
            <div class="col-8">
                <label for="full_url" class="form-label">Enter URL:</label>
                <input type="url" name="full_url" id="url" class="form-control" placeholder="Type in URL......" />
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-block">Shorten URL</button>
            </div>
        </form>
    </div>

    <div class="mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Shorten URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(function(shortUrl) { %> 
                    <tr>
                        <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td> 
                    </tr>
                <% }); %>           
                <tr>
                    <td><a href="http://example.com">http://example.com</a></td>
                    <td><a href="http://1234">1234</a></td>
                    <td>5</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
